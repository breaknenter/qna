$('.question-errors').html('<%= render 'shared/errors', resource: @question %>');

<% unless @question.errors.present? %>
  $('#question-title').html('<%= j @question.title %>');
  $('#question-text').html('<%= j @question.text %>');

  $('#question-files').html('');
  $('#question-files').html('<%= render 'shared/files', resource: @question %>');

  $('.links').html('');
  $('.links').html('<%= render 'shared/links', links: @question.links %>');

  $('.question-edit-link').show();
  $('.question-edit').addClass('hidden');
<% end %>
